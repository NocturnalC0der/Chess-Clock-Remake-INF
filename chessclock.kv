            size_hint: (1, 1)
            pos_hint: {'center_x': 1, 'center_y': 1}

            Button:
                id: one_minutes_left
                text: '01:00'
                size_hint: (1, 1)
                font_size: 20
                font_name: 'fonts/Lcd.ttf'

            Button:
                id: three_minutes_left
