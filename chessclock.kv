<TimeEntryScreen>:

    name: 'time_pick'

    BoxLayout:
        orientation: 'vertical'

        Label:
            id: timeenterheading
            text: 'Select Times'
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            size_hint: (1, 0.2)
            font_size: 80
            font_name: 'fonts/Lcd.ttf'
        
        BoxLayout:
            orientation: 'horizontal'
            
            GridLayout:
                rows: 4
                cols: 1
                spacing: 20
                size_hint: (0.5, 1)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Button:
                    id: one_minutes_left
                    text: '01:42'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_left(self)
            

                Button:
                    id: three_minutes_left
                    text: '03:32'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_left(self)

                Button:
                    id: five_minutes_left
                    text: '05:02'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_left(self)

                Button:
                    id: ten_minutes_left
                    text: '10:01'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_left(self)

            GridLayout:
                rows: 4
                cols: 1
                spacing: 20
                size_hint: (0.5, 1)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Button:
                    id: one_minutes_right
                    text: '01:40'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_right(self)

                Button:
                    id: three_minutes_right
                    text: '03:06'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_right(self)

                Button:
                    id: five_minutes_right
                    text: '05:40'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_right(self)

                Button:
                    id: ten_minutes_right
                    text: '10:00'
                    size_hint: (1, 1)
                    font_size: 50
                    font_name: 'fonts/Lcd.ttf'
                    on_release: root.pick_right(self)


    
<ClockScreen>:

    name: 'main_window'

    BoxLayout:
        orientation: 'horizontal'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.35, 1)

            Label:
                id: time_left
                text: root.time_left
                size_hint: (1, 0.25)
                font_size: 80
                font_name: 'fonts/Lcd.ttf'

            Button:
                id: btn_left
                size_hint: (1, 0.75)
                color: (0, 1, 0, 1)
                font_size: 50
                font_name: 'fonts/Lcd.ttf'
                background_color: (0, 1, 1, 1)
                on_release: root.start_switch_time_left(self)

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint: (0.3, 1)
            
            Button:
                id: stop_resume
                text: root.stop_resume_text
                size_hint: (1, 0.1)
                pos_hint: {'center_x': 0.5}
                font_size: 50
                disabled: root.time_left == root.original_time_left and root.time_right == root.original_time_right
                on_release: root.stop_resume(self)


            Button:
                id: reset
                size_hint: (1, 0.1)
                pos_hint: {'center_x': 0.5}
                text: 'RESET'
                font_size: 50
                disabled: not root.paused
                on_release: root.reset(self)
            
            Button:
                id: time_settings
                size_hint: (1, 0.1)
                pos_hint: {'center_x': 0.5}
                text: 'SETTINGS'
                font_size: 50
                on_release: 
                    app.root.current = 'time_pick'
                    root.manager.transition.direction = 'right'

        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.35, 1)

            Label:
                id: time_right
                text: root.time_right
                size_hint: (1, 0.25)
                font_size: 80
                font_name: 'fonts/Lcd.ttf'

            Button:
                id: btn_right
                size_hint: (1, 0.75)
                color: (0, 1, 0, 1)
                font_size: 50
                font_name: 'fonts/Lcd.ttf'
                background_color: (0, 1, 1, 1)
                on_release: root.start_switch_time_right(self)



                


                

                





                
