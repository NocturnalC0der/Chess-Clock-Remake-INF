<TimeEntryScreen>:

    name: 'time_pick'
    time_left: root.time_left
    time_right: root.time_right

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.20


            Label:
                id: timeenterheading
                text: 'Select Times'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (1, 1)
                font_size: 60
                #font_name: 'fonts/Lcd.ttf'

            Button:
                id: continue_btn
                text: 'Play'
                size_hint: 1, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                font_size: 50
                on_release:
                    root.pressed_play() 
                    root.manager.current = 'main_window'
                    root.manager.transition.direction: 'left'
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.80
            
            GridLayout:
                rows: 4
                cols: 1
                spacing: 20
                size_hint: (0.5, 1)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: left_column

                Button:
                    id: one_minutes_left
                    text: '01:42'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_left(self, three_minutes_left, five_minutes_left, ten_minutes_left)
                        #root.pressed_play(self, 'one_minutes_left')

                Button:
                    id: three_minutes_left
                    text: '03:32'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_left(self, one_minutes_left, five_minutes_left, ten_minutes_left)
                        #root.pressed_play(self, 'three_minutes_left')

                Button:
                    id: five_minutes_left
                    text: '05:02'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_left(self, one_minutes_left, three_minutes_left, ten_minutes_left)
                        #root.pressed_play(self, 'five_minutes_left')

                Button:
                    id: ten_minutes_left
                    text: '10:01'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_left(self, one_minutes_left, three_minutes_left, five_minutes_left)
                        #root.pressed_play(self, 'ten_minutes_left')

            GridLayout:
                rows: 4
                cols: 1
                spacing: 20
                size_hint: (0.5, 1)
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                id: right_column

                Button:
                    id: one_minutes_right
                    text: '01:40'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_right(self, three_minutes_right, five_minutes_right, ten_minutes_right)
                        #root.pressed_play(self, 'one_minutes_right')

                Button:
                    id: three_minutes_right
                    text: '03:06'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_right(self, one_minutes_right, five_minutes_right, ten_minutes_right)
                       #root.pressed_play(self, 'three_minutes_right')

                Button:
                    id: five_minutes_right
                    text: '05:40'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_right(self, one_minutes_right, three_minutes_right, ten_minutes_right)
                        #root.pressed_play(self, 'five_minutes_right')

                Button:
                    id: ten_minutes_right
                    text: '10:00'
                    size_hint: (1, 1)
                    font_size: 50
                    #font_name: 'fonts/Lcd.ttf'
                    on_release: 
                        root.pick_right(self, one_minutes_right, three_minutes_right, five_minutes_right)
                        #root.pressed_play(self, 'ten_minutes_right')

    
<ClockScreen>:

    name: 'main_window'
 

    BoxLayout:
        orientation: 'horizontal'
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.35, 1)

            Label:
                id: time_left
                text: root.time_right
                size_hint: (1, 0.25)
                font_size: 80
                #font_name: 'fonts/Lcd.ttf'

            Button:
                id: btn_left
                size_hint: (1, 0.75)
                color: (0, 1, 0, 1)
                font_size: 50
                #font_name: 'fonts/Lcd.ttf'
                background_color: (0, 1, 1, 1)
                on_release: root.start_switch_time_left(self)

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint: (0.3, 1)
            
            Button:
                id: stop_resume
                text: root.stop_resume_text
                size_hint: (1, 0.1)
                pos_hint: {'center_x': 0.5}
                font_size: 50
                disabled: root.time_left == root.original_time_left and root.time_right == root.original_time_right
                on_release: root.stop_resume(self)


            Button:
                id: reset
                size_hint: (1, 0.1)
                pos_hint: {'center_x': 0.5}
                text: 'RESET'
                font_size: 50
                #disabled: not root.paused
                on_release: root.reset(self)
            
            Button:
                id: time_settings
                size_hint: (1, 0.1)
                pos_hint: {'center_x': 0.5}
                text: 'SETTINGS'
                font_size: 50
                on_release: 
                    app.root.current = 'time_pick'
                    root.manager.transition.direction = 'right'

        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.35, 1)

            Label:
                id: time_right
                text: root.time_left
                size_hint: (1, 0.25)
                font_size: 80
                #font_name: 'fonts/Lcd.ttf'

            Button:
                id: btn_right
                size_hint: (1, 0.75)
                color: (0, 1, 0, 1)
                font_size: 50
                #font_name: 'fonts/Lcd.ttf'
                background_color: (0, 1, 1, 1)
                on_release: root.start_switch_time_right(self)
